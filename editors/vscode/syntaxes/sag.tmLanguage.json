{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Sage Agent",
  "scopeName": "source.sag",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.sag",
          "match": "//.*$"
        },
        {
          "name": "comment.block.sag",
          "begin": "/\\*",
          "end": "\\*/"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.sag",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.sag",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.template.sag",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "meta.embedded.expression.sag",
              "begin": "\\$\\{",
              "end": "\\}",
              "patterns": [
                { "include": "$self" }
              ]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.sag",
          "match": "\\b[0-9]+(\\.[0-9]+)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.sag",
          "match": "\\b(if|else|for|while|in|match|return|emit|on|await|async)\\b"
        },
        {
          "name": "keyword.declaration.sag",
          "match": "\\b(agent|tool|skill|fn|type|let|var|const|state|model|protocols)\\b"
        },
        {
          "name": "constant.language.sag",
          "match": "\\b(true|false|null)\\b"
        },
        {
          "name": "keyword.other.sag",
          "match": "\\b(mcp|a2a|ag_ui|servers|transport|mcp_server|mcp_tool|description|version)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "support.type.primitive.sag",
          "match": "\\b(string|number|boolean|timestamp|void)\\b"
        },
        {
          "name": "support.type.generic.sag",
          "match": "\\b(array|record|tuple|optional)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.sag",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.logical.sag",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.arithmetic.sag",
          "match": "(\\+|-|\\*|/|%|\\*\\*)"
        },
        {
          "name": "keyword.operator.assignment.sag",
          "match": "="
        },
        {
          "name": "keyword.operator.arrow.sag",
          "match": "(->|=>)"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "entity.name.function.sag",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "entity.name.type.sag",
          "match": "\\b([A-Z][a-zA-Z0-9_]*)\\b"
        },
        {
          "name": "variable.other.sag",
          "match": "\\b([a-z_][a-zA-Z0-9_]*)\\b"
        }
      ]
    }
  }
}
